@model IEnumerable<Contact>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Contacts</h2>
		</div>
        <div class="col-6 text-end">
            <a asp-controller="Contact" asp-action="Add" class="btn btn-primary">
               <i class="bi bi-plus-lg"></i> Create New Contact
			</a>
		</div>
	</div>
    <br /><br />


<table class="table table-bordered table-striped" align="center" style="width:70%">
    <thead>
        <tr>
            <th align = "center">
                ID
			</th>
            <th align = "center">
                Name
			</th>
		</tr>
	</thead>
    <tbody>
        @{int i = 1;}
        @foreach(var obj in Model)
        {
                <tr>
                    <td width="10%" align = "center">
                    <a class="nav-link "  asp-controller="Contact" asp-action="Info" asp-route-id="@obj.Id">@i</a>
				</td>
                <td width="60%" align = "center">
                    @obj.FirstName @obj.MiddleName @obj.LastName
				</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Contact" asp-action="Info" asp-route-id="@obj.Id"
                        class="btn btn-primary mx-2">Info</a>
                        <a asp-controller="Contact" asp-action="Edit" asp-route-id="@obj.Id"
                        class="btn btn-primary mx-2">Edit</a>
                        <form asp-controller="Contact" asp-action="Delete" asp-route-id="@obj.Id" method="post">
                        <button type="submit" class="btn btn-danger mx-2">Delete</button>
                        </form>
					</div>
				</td>
                </tr>
                i++;
            }
    </tbody>

</table>
</div>
