@model IEnumerable<Contact>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Contacts</h2>
		</div>
        <div class="col-6 text-end">
            <a asp-controller="Contact" asp-action="Add" class="btn btn-primary">
               <i class="bi bi-plus-lg"></i> Create New Contact
			</a>
		</div>
	</div>
    <br /><br />


<table class="table table-hover" align="center" style="width:70%">
    <thead>
        <tr>
            <th width="15%">       
			</th>
            <th width="35%">
                Name
			</th>
            <th width="35%">
                Phone
			</th>
            <th width="35%">       
			</th>
		</tr>
	</thead>
    <tbody>
        @{int i = 1;}
        @foreach(var obj in Model)
        {
                <tr class="table-light">
                    <td width="15%" align="center">
                    <a class="nav-link "  asp-controller="Contact" asp-action="Info" asp-route-id="@obj.Id">@i</a>
				    </td>
                <td width="35%">
                    @obj.FirstName @obj.MiddleName @obj.LastName
				</td>
                <td width="35%">
                    @obj.PhoneNumber
				</td>
                <td width="15%" align="center">
                    <div class="btn-group" role="group">
                        <a asp-controller="Contact" asp-action="Info" asp-route-id="@obj.Id"
                            class="btn btn-info">Info</a>
                        <a asp-controller="Contact" asp-action="Edit" asp-route-id="@obj.Id"
                            class="btn btn-primary">Edit</a>
                        <a asp-controller="Contact" asp-action="Delete" asp-route-id="@obj.Id" method="post"
                            type="submit" class="btn btn-danger">Delete
                        </a>
					</div>
				</td>
                </tr>
                i++;
            }
    </tbody>

</table>
</div>
