      <Generator>MSBuild:Compile</Generator>
    </Page>
    <Page Update="Views\Contacts\HomeView.xaml">
      <XamlRuntime>$(DefaultXamlRuntime)</XamlRuntime>
      <Generator>MSBuild:Compile</Generator>
    </Page>
    <Page Update="Views\MainWindow.xaml">
