@page
@model InfoModel

<div class="mrg">
	<form method="get" asp-action="Info">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h3 class="text-primary">Contact Info</h3>
			<hr />
		</div>
		<div class="form-group">
			<label class="text-primary">First name: <font color="black">@Model.ContactViewModel.FirstName </font> </label> 
		</div>
		<div class="form-group">
			<label class="text-primary">Middle name: <font color="black">@Model.ContactViewModel.MiddleName </font> </label>
		</div>
		<div class="form-group">
			<label class="text-primary">Last name: <font color="black">@Model.ContactViewModel.LastName </font> </label>
		</div>
		<div class="form-group">
			<label class="text-primary">Phone number: <font color="black">@Model.ContactViewModel.PhoneNumber </font> </label>
		</div>
		<div class="form-group">
			<label class="text-primary">Address: <font color="black">@Model.ContactViewModel.Address </font> </label>
		</div>
		<div class="form-group">
			<label class="text-primary">Description: <font color="black">@Model.ContactViewModel.Description </font> </label>
		</div>
		<div align="center">
			<a asp-page="Home" class="btn btn-dark" style="width:150px">
			Back to List
		</a>
		</div>	
	</div>
	</form>
</div>

