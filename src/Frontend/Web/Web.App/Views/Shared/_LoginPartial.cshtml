@if(User.Identity.IsAuthenticated)
{
<ul class="navbar-nav">
    <li class="nav-item">
        <a id="manage" class="nav-link disabled text-dark">Hello @User.Identity.Name!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" method="post" asp-page="/Account/Logout">
            <button id="logout" type="submit" class="btn btn-outline-dark">Logout</button>
        </form>
    </li>
</ul>
}
else
{
<ul class="navbar-nav">

    <li class="nav-item">
        <a class="nav-link" id="register" asp-area="Identity" asp-page="/Account/Register">Sign up</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="login" asp-area="Identity" asp-page="/Account/Login">Log in</a>
    </li>

</ul>
}
