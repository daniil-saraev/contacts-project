<Application x:Class="Desktop.Main.App"
             xmlns:local="clr-namespace:Desktop.Main"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Light" PrimaryColor="DeepPurple" SecondaryColor="Lime" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
                <ResourceDictionary Source="./Common/Resources/Styles/CustomDatagridCellStyle.xaml"/>
                <ResourceDictionary Source="./Common/Resources/Styles/DatagridHeaderTextColor.xaml"/>
                <ResourceDictionary Source="./Common/Resources/Styles/CustomTextBox.xaml"/>
                <ResourceDictionary Source="./Common/Resources/Styles/CustomButtonStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
