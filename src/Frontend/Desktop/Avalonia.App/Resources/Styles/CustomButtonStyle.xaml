<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:materialDesign = "http://materialdesigninxaml.net/winfx/xaml/themes" 
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="MaterialDesignFlatButton" BasedOn="{StaticResource MaterialDesignFlatButton}" TargetType="{x:Type ButtonBase}">
        <Setter Property="materialDesign:ButtonProgressAssist.IsIndicatorVisible" Value="False"/>
        <Setter Property="materialDesign:RippleAssist.Feedback" Value="Transparent" />
        
    </Style>

    <Style x:Key="MaterialDesignIconButton" BasedOn="{StaticResource MaterialDesignIconButton}" TargetType="{x:Type ButtonBase}">
        <Setter Property="materialDesign:ButtonProgressAssist.IsIndicatorVisible" Value="False"/>
        <Setter Property="materialDesign:RippleAssist.Feedback" Value="Transparent" />
    </Style>

</ResourceDictionary>